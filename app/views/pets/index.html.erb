<div class="container">
  <h1>Lost pets of Meguro 😿</h1>
  <div class="row">
    <%= @pets.each do |pet| %>
      <div class="col-12 col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= pet.color.capitalize %> <%= pet.species %></h5>
            <h6 class="card-subtitle mb-2 text-muted">📍 <%= pet.address %></h6>
            <p class="card-text">Found by <%= pet.contact_name %></p>
            <p class="card-text"><%= pluralize(pet.found_days_ago, 'day') %> ago.</p>
            <%= link_to "See more...", pet_path(pet) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>